<mujoco model='ADROIT-door(v1.5)'>
    
    <!-- ======= WORLD ======= -->
    <worldbody>
        <light directional='false' diffuse='.7 .7 .7' specular='0.03 0.03 0.03' pos='-1 -1.0 4.0' dir='1 1.0 -4'/>
<!--        <geom name='ground' size="1.5 1.5 0.25" pos="0 0 -1" type="plane" contype="1" conaffinity="0" material="groundplane" />-->
        <camera name="fixed" pos="0.9 -0.7 0.7" quat="0.92388 0.382683 0 0" />
        <!-- Camera for the VIL paper -->
        <camera name="vil_camera" pos="0 -1.2 1.2" quat="0.92388 0.382683 0 0" />
        
        <!-- ======= MOCAP ======= -->
        <body name="vive_tracker" pos="0 -0.35 0.25" mocap="true">
            <inertial pos="0 0 0" mass="0.064" diaginertia="1.70667e-05 1.70667e-05 1.70667e-05" />
            <geom size="0.03 0.01" type="cylinder" contype="0" conaffinity="0" group="3" rgba="0.3 0.3 0.3 0.3" />
        </body>

        <!-- ======= HAND ======= -->
        <body name="forearm" pos="-0.1 -1.2 0.8" euler="-1.57 0 3.14">
            <inertial pos="0 0 0" mass="0.4"/>
<!--            <joint name="ARRx" pos="0 0 0" axis="1 0 0" range="-0.5 0.3" damping="20" />-->
            <joint name="ARRy" pos="0 0 0" axis="0 1 0" range="-0.5 1" damping="20" />
            <joint name="ARTz" pos="0 0 0" axis="0 0 1" type="slide" range="-0.3 1" damping="20" />
<!--            <joint name="ARRz" pos="0 0 0" axis="0 0 1" range="-1 2" damping="20" />-->
            <geom name="V_forearm" class="D_Vizual" pos="0 -.01 .181" euler="0 0 -1.57"  mesh="forearm_simple" />
            <geom name="C_forearm1" class="DC_Hand" size="0.05 0.033" pos="0 0 0.29" type="capsule" rgba="0.4 0.5 0.6 0.1" />
            
            <!-- ======= Adroit ======= -->
            <include file="closeDoor_model.xml"/>
        </body>

        <!-- ======= Satellite ======= -->
        <body name="satelite" pos="0.2 0.97 -0.9" euler="2.33 4.6 3.14" >
            <inertial pos="0 0 0" mass="4" />
            <geom name="Satellite" class="Satellite" pos="0 -.5 .2" euler="10 10 -11.57"  mesh="Satellite" size="0.05 0.25"/>
            <body name="frame" pos="-0.107339 0.0435293 0.447376" axisangle="0 0 1 -0.8">
                <geom size="0.02 0.2" pos="1.68 -0.88 0.22" type="cylinder" material="MatWood" euler="-0.1 4.63 0"/>
                <geom size="0.02 0.2" pos="1.72 -0.93 -0.22" type="cylinder" material="MatWood" euler="-0.1 4.63 0"/>
                <site name="S_handle_target" pos="0.75 -0.5 -.18" size="0.025"/>
                <body name="door" pos="1.7 -1.12 0.17" euler="-1.4 4.63 0">
                    <body name="door_main" pos="0 0 0" euler="-0.07 0 0">
<!--                        <geom size="0.01 0.01 0.1" pos="0.3 0 0" type="box" rgba="1 0 0 1" friction="1 1 1"/>-->
                        <body>
                            <geom size="0.2 0.01 0.2" type="box" material="MatWood" name="door"/>
                            <joint name="door_hinge" pos="0.2 0 0" axis="0 0 -1" range="0 1.3" type="hinge" damping="10" stiffness="10"  />
                            <body name="latch" pos="-0.24 0.05 -0.025" euler="0 0 0">
                               <geom size="0.01 0.06" pos="0.1 -0.08 0" quat="0.707388 0.706825 0 0" type="cylinder" material="MatFoil" name="handle_1"/>
                                <geom size="0.01 0.1" pos="0.1 -0.14 0" type="capsule" material="MatFoil" name="handle_2"/>
                                <geom size="0.01 0.05" pos="0.1 -0.03 0" quat="0.707388 0 0.706825 0" type="capsule" material="MatFoil" name="handle_3"/>
                                <site name="S_handle" pos="0.1 -0.15 0.05" size="0.025" rgba="0 0 0 0"/>
                            </body>
                        </body>
                    </body>
                </body>
            </body>




            <!-- ======= Adroit ======= -->
            <include file="../HST.xml"/>
        </body>

        
    </worldbody>
    
    <actuator>
<!--        <general name="A_ARRx" joint="ARRx" ctrlrange="-.75 1" biastype="affine" gainprm="200 0 0" biasprm="0 -200 0" />-->
        <general name="A_ARRy" joint="ARRy" ctrlrange="-1 1" biastype="affine" gainprm="200 0 0" biasprm="0 -200 0" />
        <general name="A_ARTz" joint="ARTz" ctrlrange="-0.3 1" biastype="affine" gainprm="200 0 0" biasprm="0 -200 0" />
<!--        <general name="A_ARRz" joint="ARRz" ctrlrange="-1.0 2.0" biastype="affine" gainprm="200 0 0" biasprm="0 -200 0" />-->
    </actuator>
    <include file='closeDoor_assets.xml'/>

</mujoco>
